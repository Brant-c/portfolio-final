---
layout: "layout.njk"
title: "Projects"
---

<h1 class="projects-title">My Projects</h1>

<div class="filter-section">
  <span class="filter-prompt">Filter by Language:</span>
  <div class="tabs">
    {% for tag in tags %}
      <a href="/projects/{{ tag | lower }}/" class="filter-button">{{ tag }}</a>
    {% endfor %}
  </div>
</div>

<div class="project-grid">
  {% for project in collections.allProjects %}
    <div class="project">
      <h2><a href="{{ project.repo_link }}">{{ project.title }}</a></h2>
      <p>{{ project.description }}</p>

      {% if project.tech_stack %}
        <h3>Technologies Used:</h3>
        <ul>
          {% for tech in project.tech_stack %}
            {% if tech != "Projects" %}
              <li>{{ tech }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endif %}

      <div>{{ project.overview | safe }}</div>

      {% if project.feature_image %}
        <img src="{{ project.feature_image }}" alt="{{ project.title }} image">
      {% endif %}
    </div>
  {% endfor %}
</div>
